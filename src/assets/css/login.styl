@import "./_base.styl"

.login
    flex-center()
    width 100%
    height 100%
    overflow hidden
    background url('~sta/img/login-bg.png') no-repeat center
    .title
        position fixed
        top 30px
        left 0
        width 100%
        text-align center
        color #839FD8
        .zh
            margin-bottom 10px
            font-size 28px
            letter-spacing 0.5em
        .en
            font-size 14px
            letter-spacing 0.4em
    .login-box
        width 600px
        background rgba(255,255,255,.05)
        box-shadow 0 20px 40px 0 rgba(15,69,100,0.3)
        border-radius 10px
        overflow hidden
        .ivu-form
            margin-bottom 40px
            overflow hidden
        img
            width 12.5%
            height auto
            margin 46px auto 16px
        .txt
            margin-bottom 40px
            color #ffffff
            font-size 16px
            text-align center
        .login-btn
            width 240px
            height 40px
            background-color #1890FF
        .ivu-form-item
            margin 0 auto 20px
            width 240px
            height 40px
            .ivu-input-wrapper
                font-size 14px
                height 40px
    .login-foot
        position fixed
        left 0
        bottom 20px
        width 100%
        text-align center
        color #D7E2F8
        font-size 12px

